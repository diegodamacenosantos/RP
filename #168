<template>
  <div :id="config.id">

    <component :is="'style'">{{ dynamicStyle }}</component>

    <div 
      class="box"
      @mousedown="press"
      @touchstart.prevent="press"
      :class="{ pressed: isPressed }"
    >

      <div class="header">
        <span class="title">{{ config.label }}</span>
      </div>

      <div class="icon-container">
        <v-icon class="icon" size="32">
          {{ config.icon }}
        </v-icon>
      </div>

      <div class="status">
        <span>PRESSIONE</span>
      </div>

      <div class="pulse" v-if="isPressed"></div>

    </div>
  </div>
</template>

<script>
export default {
  data() {
    return {
      config: {
        id: "botao_campainha",
        label: "Campainha",
        icon: "mdi-bell",
        delay: 1000 
      },
      isPressed: false,
      dynamicStyle: "",
      timeoutRef: null
    };
  },

  mounted() {
    const id = this.config.id;

    this.dynamicStyle = `
      #${id} .box {
        position: relative;
        display: flex;
        flex-direction: column;
        height: 90px;
        width: 90px;
        background: linear-gradient(145deg, #1e1e1e, #252525);
        border: 3px solid rgba(255,255,255,0.1);
        border-radius: 16px;
        transition: all 0.25s ease;
        box-shadow: 5px 5px 10px rgba(0,0,0,0.5),
                    -2px -2px 10px rgba(255,255,255,0.05);
        overflow: hidden;
        cursor: pointer;
      }

      #${id} .box.pressed {
        background: linear-gradient(145deg, #1565C0, #0D47A1);
        border-color: #2196F3;
        box-shadow: 0 4px 15px rgba(33,150,243,0.5),
                    inset 0 0 10px rgba(255,255,255,0.1);
        transform: scale(0.96);
      }

      #${id} .header {
        padding-left: 8px;
        padding-top: 4px;
      }

      #${id} .title {
        font-size: 10px;
        font-weight: 700;
        color: #9e9e9e;
        text-transform: uppercase;
      }

      #${id} .icon-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
      }

      #${id} .icon {
        color: #ffffff;
        transition: transform 0.25s ease;
      }

      #${id} .box.pressed .icon {
        transform: scale(1.15);
      }

      #${id} .status {
        text-align: center;
        font-size: 9px;
        font-weight: 700;
        color: #aaa;
        padding-bottom: 8px;
      }

      #${id} .pulse {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60%;
        height: 60%;
        background: radial-gradient(circle,
                    rgba(255,255,255,0.2) 0%,
                    transparent 70%);
        filter: blur(8px);
        pointer-events: none;
      }
    `;
  },

  methods: {
    press() {
      
      if (this.timeoutRef) {
        clearTimeout(this.timeoutRef);
      }

      this.isPressed = true;

      this.send({ payload: "ON" });

      this.timeoutRef = setTimeout(() => {
        this.isPressed = false;
        this.timeoutRef = null;
      }, this.config.delay);
    }
  }
};
</script>
