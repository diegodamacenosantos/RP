<template>
    <div :id="config.id">

        <component :is="'style'">{{ dynamicStyle }}</component>

        <div :class="['box', { active: isActive }]">

            <div class="header">
                <span class="title">{{ config.label }}</span>
            </div>

            <div class="icon-container">
                <v-icon class="icon" :color="iconColor" size="32">
                    {{ isActive ? config.iconOn : config.iconOff }}
                </v-icon>
            </div>

            <div class="status">
                <span :class="{ glow: isActive }">
          {{ isActive ? 'OCUPADO' : 'LIVRE' }}
        </span>
            </div>

            <div class="pulse" v-if="isActive"></div>

        </div>
    </div>
</template>

<script>
    export default {
  data() {
    return {
      config: {
        id: "XXX",
        label: "XXX",
        iconOn: "mdi-account",
        iconOff: "mdi-account-off"
      },
      isActive: false,
      dynamicStyle: ""
    };
  },

  computed: {
    iconColor() {
      return this.isActive ? "#ffffff" : "#9E9E9E";
    }
  },

  mounted() {
    const id = this.config.id;
    
    this.dynamicStyle = `
      #${id} .box {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        height: 90px;
        width: 90px;
        background: linear-gradient(145deg, #1e1e1e, #252525);
        border: 3px solid rgba(255,255,255,0.1);
        border-radius: 16px;
        transition: all 0.3s cubic-bezier(0.175,0.885,0.32,1.275);
        box-shadow: 5px 5px 10px rgba(0,0,0,0.5),
                    -2px -2px 10px rgba(255,255,255,0.05);
        overflow: hidden;
      }

      #${id} .box.active {
        background: linear-gradient(145deg, #B71C1C, #7F0000);
        border-color: #F44336;
        box-shadow: 0 4px 15px rgba(244,67,54,0.4),
                    inset 0 0 10px rgba(255,255,255,0.1);
      }

      #${id} .header {
        padding-left: 8px;
        padding-top: 4px;
      }

      #${id} .title {
        font-size: 10px;
        font-weight: 700;
        color: #9e9e9e;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      #${id} .box.active .title {
        color: rgba(255,255,255,0.9);
      }

      #${id} .icon-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
      }

      #${id} .icon {
        transition: all 0.4s cubic-bezier(0.34,1.56,0.64,1);
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
      }

      #${id} .box.active .icon {
        transform: scale(1.15);
        filter: drop-shadow(0 0 8px rgba(255,255,255,0.5));
      }

      #${id} .status {
        text-align: center;
        font-size: 9px;
        font-weight: 700;
        color: #666;
        padding-bottom: 8px;
        letter-spacing: 0.5px;
      }

      #${id} .box.active .status {
        color: #fff;
      }

      #${id} .glow {
        text-shadow: 0 0 5px rgba(255,255,255,0.8);
      }

      #${id} .pulse {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60%;
        height: 60%;
        background: radial-gradient(circle,
                    rgba(255,255,255,0.2) 0%,
                    transparent 70%);
        filter: blur(8px);
        pointer-events: none;
        animation: occPulse 2s infinite;
      }

      @keyframes occPulse {
        0% { opacity: 0.5; transform: translate(-50%, -50%) scale(0.95); }
        50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.1); }
        100% { opacity: 0.5; transform: translate(-50%, -50%) scale(0.95); }
      }
    `;

    const savedStatus = localStorage.getItem(this.config.id + "_status");
    this.isActive = savedStatus === "ON";
  },

  watch: {
    msg() {
      if (!this.msg) return;
      if (this.msg.payload === "ON") this.isActive = true;
      if (this.msg.payload === "OFF") this.isActive = false;
    }
  }
};
</script>
